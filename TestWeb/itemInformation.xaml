        <Label x:Name="label5" Content="Price:" HorizontalAlignment="Left" Margin="58,318,0,0" VerticalAlignment="Top"/>
        <Button x:Name="addButton" Content="Add to cart" HorizontalAlignment="Left" Margin="640,324,0,0" VerticalAlignment="Top" Width="75" Click="addButton_Click"/>
        <TextBox x:Name="nameBox" HorizontalAlignment="Left" Height="23" Margin="101,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="324" IsEnabled="False"/>
        <TextBox x:Name="descriptionBox" HorizontalAlignment="Left" Height="225" Margin="101,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="324" IsEnabled="False"/>
        <TextBox x:Name="priceBox" HorizontalAlignment="Left" Height="23" Margin="101,321,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="97" IsEnabled="False"/>
    </Grid>
</UserControl>
